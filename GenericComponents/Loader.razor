<div class="@((Absolute ? "loader-div-absolute" : "") + " loader-div")">
    <div class="loading-ball loading-ball-side" />
    <div class="loading-ball loading-ball-middle" />
    <div class="loading-ball loading-ball-side" />
</div>

<style scoped>
    .loader-div{
        display: flex;
    }
    .loader-div-absolute{
        position: fixed;
        justify-content: center;
        align-items: center;
        width: 100vw;
        height: 100vh;
        top: 0px;
        left: 0px;
        background-color: #ffffffbf;
    }
    .loading-ball{
        height: 30px;
        width: 30px;
        border-radius: 360px;
        background-color: #62b9c7;
    }
    .loading-ball-side{
        animation: 0.9s ball-animation infinite;
    }
    .loading-ball-middle{
        margin-left: 15px;
        margin-right: 15px;
        animation: 1.1s ball-animation infinite;
    }
    @@keyframes ball-animation{
        0%{
            transform: scale(1.0);
        }
        50%{
            transform: scale(1.2);
        }
        100%{
            transform: scale(1.0);
        }
    }
</style>

@code{
    [Parameter] public bool Absolute { get; set; }
}